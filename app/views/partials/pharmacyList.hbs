<section class="ui raised segment">
    <div class="ui grid center aligned">
        <aside class="four wide column">
            <img src="images/image.jpg" class="ui big image">
            <img src="images/unnamed.jpg" class="ui big image">
            <img src="images/boots.jpg" class="ui big image">
            <img src="images/pharmacist.jpg" class="ui big image">
            <img src="images/happy-pregnant-woman.jpg" class="ui big image">
        </aside>
        <article class="twelve wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                {{#each creates}}
                    <tr>
                        <td> {{name}} </td>
                        <td> {{description}} </td>
                        <td> {{category}} </td>
                        <td> <a href="/update/{{_id}}"><button class="ui blue submit button"> Update </button> </a> </td>
                        <td> <a href="/delete/{{_id}}"> <button class="ui blue submit button"> Delete </button> </a> </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </article>
    </div>
</section>